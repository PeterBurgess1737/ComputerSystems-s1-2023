/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    Not (in=sel, out=notsel);

    // If sel=0 then return a, else return b

    And (a=notsel, b=a, out=sel1);
    And (a=sel, b=b, out=sel2);

    Or (a=sel1, b=sel2, out=out);
}